# MongoDB Configuration
# For GitHub Actions, use MongoDB Atlas (free tier) connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fb-autopost

# Groq API (Free tier - no credit limits)
# Get your key at: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Facebook Graph API
# See FACEBOOK_SETUP.md for instructions
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Scheduling Configuration
POSTS_PER_DAY=3
MIN_DELAY_MINUTES=60
MAX_DELAY_MINUTES=180

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Image Generation
IMAGE_OUTPUT_DIR=./output/images
BACKGROUND_DIR=./assets/backgrounds
